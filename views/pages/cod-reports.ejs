    background: linear-gradient(to bottom, white 0%, #dcdcdc 100%);
}
.dropdown {
    position: relative;
    display: inline-block;
    margin: 0;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    overflow-y: auto;
    max-height: 200px;
    width: 100%;
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown-content label {
    display: block;
    padding: 12px 16px;
    background-color: #f1f1f1;
    border: none;
    cursor: pointer;
}

.dropdown-content label:hover {
    background-color: #ddd;
}

.button-container {
    display: flex;
    gap: 0;
    padding: 10px;
    flex-wrap: wrap;
    justify-content: space-between;
}

.button-container button {
    padding: 10px;
    background-color: #ffffffc7;
    color: #181818;
    border: none;
    cursor: pointer;
    box-shadow: rgba(60, 64, 67, 0.3) 0 1px 2px 0, rgba(60, 64, 67, 0.15) 0 2px 6px 2px;
}

.button-container button:hover {
    background-color: #006F8C;
}

.search-input {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.selected-item {
    display: inline-block;
    margin: 2px;
    padding: 2px 6px;
    background-color: #fffefe52;
    font-size: 10px;
    border-radius: 4px;
    position: relative;
    box-shadow: rgba(60, 64, 67, 0.3) 0 1px 2px 0, rgba(60, 64, 67, 0.15) 0 1px 3px 1px;
}

.selected-item .remove-btn {
    background: none;
    border: none;
    color: #281e1e82;
    font-size: 10px;
    margin-left: 5px;
    cursor: pointer;
    width: 1px;
}

.selected-container {
    margin-top: 20px;
}

.selected-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
}

.reset-container {
    display: none;
    justify-content: flex-end;
    margin-top: 20px;
}

.reset-button {
    font-size: 10px;
    padding: 4px 8px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.reset-button:hover {
    background-color: #0056b3;
}

label {
    font-size: 12px;
    padding: 2px 5px;
}

input[type="checkbox"] {
    transform: scale(0.9);
}

.selected-options {
    background-color: #d4edda;
    padding: 5px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    margin-top: 10px;
}

.apexcharts-pie-label {
    fill: #020202 !important;
    font-weight: normal;
    font-size: 12px;
}

.apexcharts-legend-text {
    color: #000000 !important;
    font-family: Roboto, sans-serif !important;
}

.button-items,
.button-list {
    margin-bottom: 0 !important;
}

.table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

table {
    min-width: 100%;
}

.card {
    border: none !important;
    font-size: 12px;
}

#chartContainer {
    width: 80%;
    margin: auto;
    margin-bottom: 20px;
}

canvas {
    height: 900px;
}

.color {
    background-color: #f1f5fa !important;
    color: #3b3939 !important;
