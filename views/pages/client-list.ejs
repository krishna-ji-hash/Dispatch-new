        function cancelLogoUpload() {
          const logoPreview = document.getElementById('logoPreview');
          const logoInput = document.getElementById('companyLogo');
          const currentLogo = logoPreview.dataset.currentLogo;
          
          if (currentLogo) {
            logoPreview.innerHTML = `
              <div class="logo-container">
                <img src="/${currentLogo}" alt="Company Logo" 
                     style="max-width: 100px; max-height: 100px;" class="mt-2">
                <div class="logo-actions mt-2">
                  <button type="button" class="btn btn-sm btn-danger" onclick="removeLogo()">
                    <i class="fas fa-trash"></i> Remove
                  </button>
                </div>
              </div>
            `;
          } else {
            logoPreview.innerHTML = '<p class="text-muted">No logo uploaded</p>';
          }
          
          if (logoInput) {
            logoInput.value = '';
          }
        }
        
        async function deleteClient(clientId) {
          try {
            // Show confirmation dialog
            console.log('Delete function called with ID:', clientId);
            const result = await Swal.fire({
              title: 'Are you sure?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, delete it!'
            });
        
            if (result.isDismissed) return;
        
            // Send delete request
            const response = await axios.delete(`/delete-client/${clientId}`);
        
            if (response.data.success) {
              // Show success message
              await Swal.fire(
                'Deleted!',
                'Client has been deleted successfully.',
                'success'
              );
        
              // Refresh the page
              window.location.reload();
            }
          } catch (error) {
            console.error('Error deleting client:', error);
            Swal.fire(
              'Error!',
              'Failed to delete client. Please try again.',
              'error'
            );
          }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
          const deleteButtons = document.querySelectorAll('.delete-client-btn');
          deleteButtons.forEach(button => {
            button.addEventListener('click', function() {
              const clientId = this.getAttribute('data-client-id');
              deleteClient(clientId);
            });
          });
        });
        
          function toggleVas(clientId, isChecked) {
            const vasValue = isChecked ? 1 : 0;
        
            axios.put('/api/clients/vas', {
              client_id: clientId,
              vas: vasValue
            })
            .then(response => {
              if (response.data.success) {
                console.log('VAS updated successfully');
              } else {
                alert('Failed to update VAS');
              }
            })
            .catch(error => {
              console.error('Error updating VAS:', error);
              alert('An error occurred while updating VAS');
            });
          }
        
        
        </script>
        
