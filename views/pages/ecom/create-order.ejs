function selectChannel(channelName, el) {
  document.getElementById('channelInput').value = channelName;
  document.getElementById('channelDropdown').style.display = 'none';

  // Remove all tick marks
  document.querySelectorAll('.check-icon').forEach(icon => icon.style.display = 'none');

  // Show tick for selected
  if (el) {
    const check = el.querySelector('.check-icon');
    if (check) check.style.display = 'inline-block';
  }
}

function loadMoreChannels() {
  const moreChannels = document.getElementById('moreChannels');
  const loadBtn = document.getElementById('loadMore');

  if (moreChannels.children.length === 0) {
    const channels = ['Shopify','Amazon', 'Flipkart', 'Offline Store'];
    channels.forEach(name => {
      const div = document.createElement('div');
      div.style.padding = '6px 0';
      div.style.cursor = 'pointer';
      div.style.display = 'flex';
      div.style.justifyContent = 'space-between';
      div.style.alignItems = 'center';
      div.style.color = '#333';
      div.textContent = name;

      const checkSpan = document.createElement('span');
      checkSpan.className = 'check-icon';
      checkSpan.style.display = 'none';
      checkSpan.style.color = 'green';
      checkSpan.innerHTML = '<i class="fas fa-check-circle"></i>';

      div.appendChild(checkSpan);
      div.onclick = () => selectChannel(name, div);
      moreChannels.appendChild(div);
    });
  } else {
    loadBtn.innerText = 'No more data';
    loadBtn.style.color = '#888';
    loadBtn.style.cursor = 'default';
  }
}

