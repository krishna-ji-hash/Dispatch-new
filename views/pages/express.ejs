            align-items: center;
            justify-content: center;
        }
        
        .progress-arc {
            width: 100px;
            height: 60px;
            position: relative;
        }
        
        .progress-arc svg {
            transform: rotate(-90deg);
        }
        
        .progress-arc text {
            font-weight: 600;
            font-size: 1.25rem;
            transform: translateY(5px);
        }
        
        .bar-chart-container {
            height: 350px;
            position: relative;
        }
        
        .bar-chart {
            position: absolute;
            left: 5rem;
            width: calc(100% - 5rem);
            height: 21rem;
            top: 0;
        }
        
        .bar {
            transition: all 0.5s ease;
        }
        
        .bar:hover {
