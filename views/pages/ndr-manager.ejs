                            function applySearchFilter(rows, q) {
                                if (!q) return rows;
                                const needle = q.trim().toLowerCase();
                                return rows.filter(r =>
                                    Object.values(r).some(v =>
                                        String(v ?? '').toLowerCase().includes(needle)
