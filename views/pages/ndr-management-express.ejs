            }

            .btn-outline-primary:hover {
                background: #3b82f6;
                color: white;
            }

            .btn-outline-secondary {
                background: transparent;
                color: #6b7280;
                border-color: #6b7280;
            }

            .btn-outline-secondary:hover {
                background: #6b7280;
                color: white;
            }

            .btn-success {
                background: #10b981;
                color: white;
                border-color: #10b981;
            }

            .btn-success:hover {
                background: #059669;
                border-color: #059669;
            }

            .btn-danger {
