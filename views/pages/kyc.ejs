                    if (!accept.length) return true;
                    const okByMime = accept.some(a => a && f.type && (f.type === a || f.type.startsWith(a.replace('*',''))));
                    const okByExt  = accept.some(a => a.startsWith('.') && f.name.toLowerCase().endsWith(a.toLowerCase()));
