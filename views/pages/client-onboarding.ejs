             <!-- JavaScript for dynamic row addition, reset, delete, and data saving -->
             <script>
               // Keep track of used dropdown selections
               var usedSelections = [];
       
               // Function to add a new row
               function addBox() {
                 var tableBody = document.querySelector("#commercials-table tbody");
                 var newRow = tableBody.rows[0].cloneNode(true);
       
                 // Clear all the input values in the cloned row
                 var inputs = newRow.querySelectorAll("input");
                 inputs.forEach(function (input) {
                   input.value = "";  // Clear input field
                   input.placeholder = "Enter Value";  // Set placeholder to "Enter Value"
                 });
       
                 // Reset dropdown text in the cloned row
                 var dropdownText = newRow.querySelector('.dropdown-toggle');
                 dropdownText.innerHTML = 'Select Commercials <i class="mdi mdi-chevron-down"></i>';
       
                 // Re-enable dropdown in cloned row
                 newRow.querySelector('.dropdown-toggle').classList.remove('disabled');
       
                 // Append the new row to the table
                 tableBody.appendChild(newRow);
       
                 // Update dropdown options
                 updateDropdowns();
               }
       
               // Function to select a commercial from the dropdown
               function selectCommercial(el) {
                 var dropdown = el.closest('.dropdown');
                 var dropdownToggle = dropdown.querySelector('.dropdown-toggle');
                 var selectedValue = el.textContent;
       
                 // Set the selected text to the dropdown and disable it
                 dropdownToggle.innerHTML = selectedValue + ' <i class="mdi mdi-chevron-down"></i>';
                 dropdownToggle.classList.add('Enable'); // Disable the dropdown once selected
       
                 // Add the selection to the used list
                 if (!usedSelections.includes(selectedValue)) {
                   usedSelections.push(selectedValue);
                 }
       
                 // Update dropdown options to prevent multiple selections of the same item
                 updateDropdowns();
               }
       
               // Function to update dropdowns, show unused items
               function updateDropdowns() {
                 var dropdownItems = document.querySelectorAll('.dropdown-menu .dropdown-item');
       
                 dropdownItems.forEach(function (item) {
                   if (usedSelections.includes(item.textContent.trim())) {
                     item.style.display = 'active';  // Hide used items
                   } else {
                     item.style.display = 'block';  // Show unused items
                   }
                 });
               }
       
               // Function to reset a row to its default state
               function resetRow(button) {
                 var row = button.closest('tr');
       
                 // Reset the dropdown
                 var dropdownToggle = row.querySelector('.dropdown-toggle');
                 dropdownToggle.innerHTML = 'Select Commercials <i class="mdi mdi-chevron-down"></i>';
                 dropdownToggle.classList.remove('disabled'); // Re-enable the dropdown
       
                 // Remove the selection from the used list if it's not default
                 var selectedValue = dropdownToggle.textContent.trim();
                 if (selectedValue !== 'Select Commercials') {
                   var index = usedSelections.indexOf(selectedValue);
                   if (index !== -1) {
                     usedSelections.splice(index, 1); // Remove from used selections
                   }
                 }
       
                 // Reset the inputs
                 var inputs = row.querySelectorAll('input');
                 inputs.forEach(function (input) {
                   input.value = "";  // Clear input field
                   input.placeholder = "Enter Value";  // Set placeholder to "Enter Value"
                 });
       
                 // Update dropdown options
                 updateDropdowns();
               }
       
               // Function to delete a row
               function deleteRow(button) {
                 var row = button.closest('tr');
                 row.remove();
       
                 // Update dropdown options after removing the row
                 updateDropdowns();
               }
       
               // Reset all entries in the form
               function resetAll() {
                 var tableBody = document.querySelector("#commercials-table tbody");
       
                 // Clear the table except the first row
                 var rows = tableBody.querySelectorAll("tr");
                 for (var i = 1; i < rows.length; i++) {
                   rows[i].remove();
                 }
       
                 // Reset the first row
                 resetRow(rows[0].querySelector('.btn-warning'));
       
                 // Clear used selections and reset dropdowns
                 usedSelections = [];
                 updateDropdowns();
               }
       
               // Function to save the table data with validation
               function saveData() {
                 var tableBody = document.querySelector("#commercials-table tbody");
                 var savedDataTable = document.querySelector("#saved-data-table tbody");
                 savedDataTable.innerHTML = "";  // Clear previous saved data
       
                 var isValid = true; // To track if all rows are valid
       
                 // Loop through the rows of the main table and save the data
                 Array.from(tableBody.rows).forEach(function (row) {
                   var rowData = [];
                   var isRowValid = true; // Track the validity of the current row
       
                   // Get the description from the dropdown
                   var description = row.querySelector('.dropdown-toggle').textContent.trim();
                   if (description === 'Select Commercials' || description === '') {
                     isRowValid = false; // Mark row invalid if no dropdown option selected
                   }
                   rowData.push(description);
       
                   // Get the input values and validate
                   row.querySelectorAll('input').forEach(function (input) {
                     if (input.value.trim() === '') {
                       isRowValid = false; // Mark row invalid if input is empty
                     }
                     rowData.push(input.value.trim());
                   });
       
                   // If row is valid, append to saved data
                   if (isRowValid) {
                     var newRow = document.createElement('tr');
                     rowData.forEach(function (data) {
                       var newCell = document.createElement('td');
                       newCell.textContent = data;
                       newRow.appendChild(newCell);
                     });
       
                     // Add delete button to saved row
                     var actionsCell = document.createElement('td');
                     var deleteBtn = document.createElement('button');
                     deleteBtn.classList.add('btn', 'btn-danger');
                     deleteBtn.innerHTML = 'Delete';
                     deleteBtn.onclick = function () {
                       newRow.remove();
                     };
                     actionsCell.appendChild(deleteBtn);
                     newRow.appendChild(actionsCell);
       
                     savedDataTable.appendChild(newRow);
                   } else {
                     isValid = false; // At least one invalid row found
                   }
                 });
       
                 // If the data is invalid (any empty field), show an alert
                 if (!isValid) {
                   alert('Please fill in all fields before saving.');
                 }
               }
       
